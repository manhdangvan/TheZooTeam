@model KGSHOP.Models.GroupProduct
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Product Group Details</h2>
<form method="post" asp-action="Details">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Content"></label>
            </div>
            <div class="col-5">
                <input asp-for="Content" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Status"></label>
            </div>
            <div class="col-5">
                <input asp-for="Status" disabled class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.ProductGroup_ID" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
