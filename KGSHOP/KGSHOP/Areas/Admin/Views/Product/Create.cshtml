@model KGSHOP.Models.ViewModel.ProductViewModel
@using KGSHOP.Extensions
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info pb-2">Create Product</h2>

<form method="post">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Products.Name" />
            </div>
            <span asp-validation-for="Products.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Status"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Products.Status" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Date"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Products.Date" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Products.Price" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.PriceNew"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Products.PriceNew" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Detail"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Products.Detail" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Order"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Products.Order" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="GroupProducts"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Products.ProductGroup_ID" asp-items="Model.GroupProducts.ToSelectListItem(Model.Products.ProductGroup_ID)" class="form-control"></select>
            </div>
        </div>
           <div class="col-3">
            <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a class="btn btn-success" asp-action="Index">Back to list</a>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}