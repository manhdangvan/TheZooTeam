@model KGSHOP.Models.ViewModel.ProductViewModel
@using KGSHOP.Extensions

@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Product Details</h2>
<form method="post" asp-action="Details">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Detail"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Detail" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Price" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.PriceNew"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.PriceNew" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Date"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Date" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Order"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Order" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Products.Status"></label>
            </div>
            <div class="col-5">
                <input asp-for="Products.Status" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="GroupProducts"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Products.ProductGroup_ID" asp-items="Model.GroupProducts.ToSelectListItem(Model.Products.ProductGroup_ID)" disabled class="form-control"></select>
            </div>
        </div>
        <div class="col-3">
            <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Products.ID" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
