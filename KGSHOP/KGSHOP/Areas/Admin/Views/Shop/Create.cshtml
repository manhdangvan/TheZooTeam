@model KGSHOP.Models.ViewModel.ShopViewModel
@using KGSHOP.ExtensionShop
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info pb-2">Create Shop</h2>

<form method="post">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Shops.Name"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Shops.Name" />
            </div>
            <span asp-validation-for="Shops.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Shops.Address"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Shops.Address" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Shops.Tel"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Shops.Tel" />
            </div>
        </div>       
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Provinces"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Shops.Province_ID" asp-items="Model.Provinces.ToSelectListItem(Model.Shops.Province_ID)" class="form-control"></select>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a class="btn btn-success" asp-action="Index">Back to list</a>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}