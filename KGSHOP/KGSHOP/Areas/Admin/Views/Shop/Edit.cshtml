@model KGSHOP.Models.ViewModel.ShopViewModel
@using KGSHOP.ExtensionShop

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Shop</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Shops.ID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Shops.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Shops.Name" class="form-control" />
                </div>
                <span asp-validation-for="Shops.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Shops.Address"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Shops.Address" class="form-control" />
                </div>
                <span asp-validation-for="Shops.Address" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Shops.Tel"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Shops.Tel" class="form-control" />
                </div>
                <span asp-validation-for="Shops.Tel" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Provinces"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Shops.Province_ID" asp-items="Model.Provinces.ToSelectListItem(Model.Shops.Province_ID)" class="form-control"></select>
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
        <br />
        <div class="form-group">
            <input type="submit" asp-action="Edit" asp-route-id="@Model.Shops.ID" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

