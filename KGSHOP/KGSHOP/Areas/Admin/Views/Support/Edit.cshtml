
@model KGSHOP.Models.Support
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-info">Reply to customer</h2>
<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="ID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Content"></label>
            </div>
            <div class="col-5">
                <input asp-for="Content" disabled class="form-control" />
            </div>
            <span asp-validation-for="Content" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Reply"></label>
            </div>
            <div class="col-5">
                <input asp-for="Reply" class="form-control" />
            </div>
            <span asp-validation-for="Reply" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class=" btn btn-primary" asp-route-id="@Model.ID" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to list</a>
        </div>
    </div>
</form>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}