@model KGSHOP.Models.ViewModel.ProductsListViewModel
@using KGSHOP.Extensions
@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/Pretty-Product-List.css" />
    <link rel="stylesheet" href="~/css/thegioididong.css" />
</head>

<br />
<br />


<form method="get">
    
        <div class="carousel slide" data-ride="carousel" id="carousel-1">
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item"><img class="w-100 d-block" src="https://cdn.fptshop.com.vn/Uploads/Originals/2019/11/1/637081680334756036_FS1%20(1).png" alt="Slide Image"></div>
                <div class="carousel-item active"><img class="w-100 d-block" src="https://cdn.fptshop.com.vn/Uploads/Originals/2019/11/1/637081680333546094_FS1.png" alt="Slide Image"></div>
                <div class="carousel-item"><img class="w-100 d-block" src="https://cdn.fptshop.com.vn/Uploads/Originals/2019/11/1/637081958050654798_FS1-Thu-Cu.png" alt="Slide Image"></div>
            </div>
            <div><a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev"><span class="carousel-control-prev-icon"></span><span class="sr-only">Previous</span></a><a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next"><span class="carousel-control-next-icon"></span><span class="sr-only">Next</span></a></div>
            <ol class="carousel-indicators">
                <li data-target="#carousel-1" data-slide-to="0"></li>
                <li data-target="#carousel-1" data-slide-to="1" class="active"></li>
                <li data-target="#carousel-1" data-slide-to="2"></li>
            </ol>
        </div>
        <br />

        <div class="form-group row">
            <div class="col-2 pa-1">
                <label>Filter group products:</label>
            </div>

            <div class="col-6">
                <select class="custom-select" name="groupProductsSelected">
                    <option value="Default" selected>Default</option>
                    @foreach (var groupProduct in Model.GroupProducts)
                    {
                        <option value="@groupProduct.Name">@groupProduct.Name</option>
                    }
                </select>

            </div>

            <div class="col-3">
                <button class="btn btn-primary" type="submit">
                    <i class="fa fa-filter"></i>
                </button>
            </div>
        </div>
    </div>
</form>

<h2 style="padding:20px;">NEW PRODUCTS</h2>

<div class="row product-list">
    @foreach (var product in Model.Products)
    {

        <div class="col-sm-6 col-md-4 product-item">
            <div class="product-container">
                <div class="row">
                    <div class="col-md-12">
                        <a class="product-image" asp-action="Details" asp-controller="Home" asp-route-id="@product.ID"><img class="card-img-top" style="height:400px;width:350px;" src="@product.Image" alt="Card Image"></a>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h2><a asp-action="Details" asp-controller="Home" asp-route-id="@product.ID">@product.Name</a></h2>
                    </div>
                </div>
                <div class="product-rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-half"></i>
                    @{
                        var random = new Random();
                        var countReviewers = random.Next(20, 500);
                    }
                    <a class="small-text" href="#">@countReviewers reviews</a>
                </div>
                <div class="row">
                    <div class="col-12">
                        <p class="product-description">@product.Detail</p>
                        <div class="row">
                            <div class="col-6 ">
                                <a class="btn btn-primary" asp-action="Details" asp-controller="Home" asp-route-id="@product.ID">Buy Now!</a>
                            </div>
                            <div class="col-6 offset-7">

                                <label style="font-size:20px; color:#000000">PRICE: <b>$@product.Price</b></label>
                            </div>
                        </div>
                        <div class="col-6 offset-7 ">
                          
                           
                                <label style="font-size:20px; color:#a51313;"> NOW:<b>$@product.PriceNew</b> </label>
                         
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

<form method="get">
    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
         page-class="btn border" page-class-normal="btn btn-default active"
         page-class-selected="btn btn-primary active" class="btn-group m-1"></div>
</form>
